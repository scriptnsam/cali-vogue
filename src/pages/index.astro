---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import SwiperComponent from '../components/Swiper'
---

<Layout title="Cali's Vogue" image='/logo.jpg'>
	<main class="mt-0">
		<section class="w-full py-12 md:py-12 lg:py-24 xl:py-36 bg-pink-600">
			<div class="container px-4 md:px-6 m-auto">
				<div class="flex flex-col items-center space-y-4 text-center">
					<div class="space-y-2">
						<h1 class="text-2xl font-bold tracking-tighter sm:text-3xl md:text-4xl lg:text-5xl/none text-black">
							Discover Unique Fashion, Accessories, & Decor
						</h1>
						<p class="mx-auto max-w-[700px] text-gray-300 md:text-xl">
							Elevate your style and space with our handcrafted accessories, trendy fashion, and unique decor.
						</p>
					</div>
					<div class="space-x-4">
						<Button className='bg-pink-800 p-2 hover:bg-opacity-70 duration-200 rounded-md bg-opacity-80 text-white'>Shop Now</Button>
						<Button className='bg-white p-2 rounded-md text-black hover:bg-opacity-85 duration-200 '>Learn More</Button>
					</div>
				</div>
			</div>
		</section>

		<!-- swiper section -->
		<section class="mt-5">
			<SwiperComponent client:load/>
		</section>

		<!-- Product categories section -->
		<section class="py-10 bg-gray-100">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-6">Shop by Category</h2>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
					
					<!-- Category Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img loading="lazy" src="https://i.pinimg.com/originals/01/e5/05/01e505d461b26ae103807eee110242a9.jpg" alt="Category 1" class="w-full h-40 object-cover transition-opacity duration-300 hover:opacity-75">
						<div class="p-4">
							<h3 class="text-lg font-semibold">Wears</h3>
							<p class="text-gray-600">Explore our unique collection of wears.</p>
							<a href="/category/wears" class="mt-2 inline-block text-blue-500 hover:underline">Shop Now</a>
						</div>
					</div>
		
					<!-- Category Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img loading="lazy" src="https://2.bp.blogspot.com/-NZNN95fmN4Q/UnZCtNCM6eI/AAAAAAABMvQ/fSwKnmCMyP0/s1600/Unknown.jpeg" alt="Category 2" class="w-full h-40 object-cover transition-opacity duration-300 hover:opacity-75">
						<div class="p-4">
							<h3 class="text-lg font-semibold">Beads</h3>
							<p class="text-gray-600">Discover beautiful handcrafted beads.</p>
							<a href="/category/beads" class="mt-2 inline-block text-blue-500 hover:underline">Shop Now</a>
						</div>
					</div>
		
					<!-- Category Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img loading="lazy" src="https://images.pexels.com/photos/4263995/pexels-photo-4263995.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="Category 3" class="w-full h-40 object-cover transition-opacity duration-300 hover:opacity-75">
						<div class="p-4">
							<h3 class="text-lg font-semibold">Footwear</h3>
							<p class="text-gray-600">Find the perfect pair of shoes.</p>
							<a href="/category/footwear" class="mt-2 inline-block text-blue-500 hover:underline">Shop Now</a>
						</div>
					</div>
		
					<!-- Category Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img loading="lazy" src="https://d1dq9tiesi76an.cloudfront.net/pub/media/catalog/product/cache/1/image/e9c3970ab036de70892d86c6d221abfe/2/7/27725.jpg" alt="Category 4" class="w-full h-40 object-cover transition-opacity duration-300 hover:opacity-75">
						<div class="p-4">
							<h3 class="text-lg font-semibold">Cups</h3>
							<p class="text-gray-600">Explore our unique cup designs.</p>
							<a href="/category/cups" class="mt-2 inline-block text-blue-500 hover:underline">Shop Now</a>
						</div>
					</div>
		
					<!-- Add more categories as needed -->
				</div>
			</div>
		</section>

		<!-- Sales and promotions section -->
		<section class="py-12 bg-gray-100">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl font-bold text-pink-600 mb-4">Special Sales & Promotions</h2>
				<p class="text-gray-700 text-lg mb-8">Don't miss out on our exclusive deals and limited-time offers!</p>
				
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					
					<!-- Promotion Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img src="https://static.vecteezy.com/system/resources/previews/002/261/679/original/50-percent-off-sale-tag-sale-of-special-offers-discount-with-the-price-is-50-percent-vector.jpg" alt="Promotion 1" class="w-full sm:h-36 h-48 object-cover">
						<div class="p-6 text-center">
							<h3 class="text-2xl font-bold text-pink-600 mb-2">50% Off All Footwear</h3>
							<p class="text-gray-600 mb-4">Shop now and save big on all footwear. Limited time only!</p>
							<a href="/category/footwear" class="inline-block px-6 py-2 bg-pink-600 text-white font-semibold rounded hover:bg-pink-700 transition-colors">Shop Now</a>
						</div>
					</div>
		
					<!-- Promotion Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img src="https://static.vecteezy.com/system/resources/thumbnails/011/935/890/small_2x/20-percent-off-special-offer-gold-lettering-numbers-brush-drawing-hand-drawn-sketch-vector.jpg" alt="Promotion 2" class="w-full h-48 sm:h-36 object-cover">
						<div class="p-6 text-center">
							<h3 class="text-2xl font-bold text-pink-600 mb-2">20% Off Jewelry</h3>
							<p class="text-gray-600 mb-4">Add some sparkle with handcrafted jewelry at 20% off.</p>
							<a href="/category/jewelry" class="inline-block px-6 py-2 bg-pink-600 text-white font-semibold rounded hover:bg-pink-700 transition-colors">Shop Now</a>
						</div>
					</div>
		
					<!-- Promotion Item -->
					<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg">
						<img src="https://img.freepik.com/premium-vector/buy-1-free-get-1-sale-banner-vector-illustration_275806-1557.jpg?w=2000" alt="Promotion 3" class="w-full h-48 sm:h-36 object-cover">
						<div class="p-6 text-center">
							<h3 class="text-2xl font-bold text-pink-600 mb-2">Buy 1 Get 1 Free</h3>
							<p class="text-gray-600 mb-4">Exclusive offer on select categories. Grab yours now!</p>
							<a href="/category/bogo" class="inline-block px-6 py-2 bg-pink-600 text-white font-semibold rounded hover:bg-pink-700 transition-colors">Shop Now</a>
						</div>
					</div>
		
				</div>
			</div>
		</section>
		
		
		
		
	</main>
</Layout>
